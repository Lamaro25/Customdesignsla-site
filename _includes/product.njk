<section class="product-page">
  <div class="container mx-auto px-4 py-10">

    {# === GALLERY (ABOVE OVERVIEW) === #}
    {% if page.data.images and page.data.images.length > 1 %}
      <div class="product-gallery">
        {% for image in page.data.images %}
          {% if loop.index0 > 0 and loop.index0 < 4 %}
            <img src="{{ image | url }}" alt="{{ page.data.title }}">
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {# === PRODUCT CONTENT (Overview, Breakdown, etc.) === #}
    <div class="prose max-w-none">
      {{ content | safe }}
    </div>

  </div>
</section>
