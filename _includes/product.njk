{% extends "base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container mx-auto px-4 py-10">
    <div class="grid md:grid-cols-2 gap-10">

     <!-- Product Images -->
<div>
  {% if images %}
    {% for image in images %}
      <img
        src="{{ image | url }}"
        alt="{{ title }} product image"
        class="w-full mb-4 rounded-lg shadow"
        loading="lazy"
      >
    {% endfor %}
  {% else %}
    <p>No images uploaded yet.</p>
  {% endif %}
</div>

      <!-- Product Details -->
      <div class="flex flex-col justify-center">
        <h1 class="text-3xl font-bold mb-4">{{ title }}</h1>

        {% if price %}
          <p class="text-xl font-semibold mb-2">$ {{ price | float }}</p>
        {% endif %}

        {% if material %}
          <p class="text-gray-700 mb-2">Material: {{ material }}</p>
        {% endif %}

        {% if size %}
          <p class="text-gray-700 mb-2">Size: {{ size | capitalize }}</p>
        {% endif %}

        {% if sku %}
          <p class="text-sm text-gray-500 mb-4">SKU: {{ sku }}</p>
        {% endif %}

        <div class="prose max-w-none mb-6">
          {{ content | safe }}
        </div>

        <button class="bg-black text-white px-6 py-3 rounded hover:bg-gray-800 transition">
          Buy Now (Coming Soon)
        </button>
      </div>
    </div>
  </div>
</section>
{% endblock %}
