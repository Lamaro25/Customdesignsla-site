<a href="{{ url }}" class="ltr-card">

  <!-- IMAGE SLOT -->
  <div class="ltr-card-image">
    {% if image %}
      <img src="{{ image }}" alt="{{ title }}">
    {% else %}
      <div class="ltr-placeholder">Image Coming Soon</div>
    {% endif %}
  </div>

  <!-- TEXT -->
  <div class="ltr-card-text">
    <h3>{{ title }}</h3>
    {% if price %}
      <p>${{ price }} USD</p>
    {% endif %}
  </div>

</a>

<style>
.ltr-card {
  width: 100%;
  max-width: 340px;
  background-image: url("/static/img/LTR-Western-Integration/ltr-card-frame.png");
  background-size: cover;
  background-position: center;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
}

.ltr-card-image {
  width: 100%;
  aspect-ratio: 4 / 3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ltr-card-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.ltr-card-text {
  margin-top: 0.5rem;
  text-align: center;
  font-family: "Georgia", serif;
  color: #4a2e13;
}
</style>
