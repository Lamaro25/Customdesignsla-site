<a class="chrome-card" href="{{ url }}">
  <div class="chrome-card-inner">
    <div class="chrome-card-image">
      {% if image %}
        <img src="{{ image }}" alt="{{ title }}">
      {% else %}
        <img src="/static/img/placeholder.png" alt="Image Coming Soon">
      {% endif %}
    </div>
    <h3 class="chrome-card-title">{{ title }}</h3>
  </div>
</a>

<style>
.chrome-card {
  display: block;
  text-decoration: none;
  color: black;
  font-family: "Georgia", serif;
}

.chrome-card-inner {
  border: 6px solid #d9d9d9;
  border-radius: 18px;
  padding: 1.5rem;
  background: linear-gradient(145deg, #ffffff, #e6e6e6);
  box-shadow:
    inset 3px 3px 8px rgba(0,0,0,0.15),
    inset -3px -3px 8px rgba(255,255,255,0.9),
    0 4px 16px rgba(0,0,0,0.1);
  transition: transform 0.2s ease;
}

.chrome-card-inner:hover {
  transform: translateY(-4px);
}

.chrome-card-image {
  width: 100%;
  height: 220px;
  border-radius: 12px;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.chrome-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.chrome-card-title {
  margin-top: 1rem;
  font-size: 1.1rem;
  text-align: center;
}
</style>
