{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# ===============================
       FEATURED PRODUCT IMAGE
       =============================== #}
    {% if page.data.images and page.data.images.length %}
      <div class="product-featured-image">
        <img
          src="{{ page.data.images[0] }}"
          alt="{{ title }}"
          loading="eager"
        >
      </div>
    {% endif %}

    {# ===============================
       MASTER PRODUCT GALLERY LOGIC
       =============================== #}

    {# 1️⃣ Primary gallery (rings, bracelets) #}
    {% if page.data.gallery and page.data.gallery.length %}
      {% set galleryImages = page.data.gallery %}

    {# 2️⃣ Charm fallback (collection context) #}
    {% elseif page.data.data and page.data.data.gallery and page.data.data.gallery.length %}
      {% set galleryImages = page.data.data.gallery %}

    {# 3️⃣ Last-resort fallback (images[1:]) #}
    {% elseif page.data.images and page.data.images.length > 1 %}
      {% set galleryImages = page.data.images | slice(1) %}

    {% else %}
      {% set galleryImages = [] %}
    {% endif %}

    {% if galleryImages.length %}
      <section class="product-gallery-section">
        <div class="product-gallery-grid">
          {% for image in galleryImages %}
            <div class="product-gallery-item">
              <img
                src="{{ image }}"
                alt="{{ title }} gallery image {{ loop.index }}"
                loading="lazy"
              >
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {# ===============================
       PRODUCT CONTENT
       =============================== #}
    <div class="prose max-w-none product-content">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
