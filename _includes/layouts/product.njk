{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# ===============================
       FEATURED PRODUCT IMAGE
       Uses images[0] ONLY
       =============================== #}
    {% if images and images.length %}
      <div class="product-featured-image">
        <img
          src="{{ images[0] }}"
          alt="{{ title }}"
          loading="eager"
        >
      </div>
    {% endif %}

    {# ===============================
       NORMALIZED PRODUCT GALLERY
       =============================== #}

    {% set galleryImages = [] %}

    {# Preferred: explicit gallery (ALL products should use this) #}
    {% if gallery and gallery.length %}
      {% set galleryImages = gallery %}
    {% endif %}

    {% if galleryImages.length %}
      <section class="product-gallery-section">
        <div class="product-gallery-grid">
          {% for image in galleryImages %}
            <div class="product-gallery-item">
              <img
                src="{{ image }}"
                alt="{{ title }} gallery image {{ loop.index }}"
                loading="lazy"
              >
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {# ===============================
       PRODUCT CONTENT
       =============================== #}
    <div class="prose max-w-none product-content">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
