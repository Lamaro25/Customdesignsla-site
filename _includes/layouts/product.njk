{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# === 3-IMAGE GALLERY (IMAGES 2â€“4, ABOVE OVERVIEW) === #}
    {% if images and images.length > 1 %}
      <div class="product-gallery">
        {% for image in images | slice(1, 4) %}
          <img
            src="{{ image }}"
            alt="{{ title }} gallery image {{ loop.index }}"
            loading="lazy"
          >
        {% endfor %}
      </div>
    {% endif %}

    {# === MARKDOWN CONTENT (Overview, Breakdown, etc.) === #}
    <div class="prose max-w-none">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
