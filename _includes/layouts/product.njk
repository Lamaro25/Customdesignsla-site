{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# ===============================
       NORMALIZE IMAGE SOURCES
       =============================== #}

    {% set images = [] %}
    {% set rawGallery = [] %}

    {% if page.data.images and page.data.images.length %}
      {% set images = page.data.images %}
    {% elif page.data.data and page.data.data.images %}
      {% set images = page.data.data.images %}
    {% endif %}

    {% if page.data.gallery and page.data.gallery.length %}
      {% set rawGallery = page.data.gallery %}
    {% elif page.data.data and page.data.data.gallery %}
      {% set rawGallery = page.data.data.gallery %}
    {% endif %}

    {# ===============================
       FEATURED IMAGE (FIRST IMAGE)
       =============================== #}

    {% set featuredSrc = null %}
    {% if images and images.length %}
      {% set featuredSrc = images[0] %}
      <div class="product-featured-image">
        <img
          src="{{ featuredSrc }}"
          alt="{{ title }}"
          loading="eager"
        >
      </div>
    {% endif %}

    {# ===============================
       FALLBACK: if no gallery exists,
       use images[1..] as gallery
       =============================== #}

    {% if (not rawGallery or not rawGallery.length) and images.length > 1 %}
      {% set rawGallery = images | slice(1) %}
    {% endif %}

    {# ===============================
       CLEAN + DEDUPED GALLERY
       =============================== #}

    {% set gallery = [] %}

    {% for img in rawGallery %}
      {% if img and img != featuredSrc and (img not in gallery) %}
        {% set gallery = gallery.concat([img]) %}
      {% endif %}
    {% endfor %}

    {% if gallery and gallery.length %}
      <section class="product-gallery-section">
        <div class="product-gallery-grid">
          {% for image in gallery %}
            <div class="product-gallery-item">
              <img
                src="{{ image }}"
                alt="{{ title }} gallery image {{ loop.index }}"
                loading="lazy"
              >
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {# ===============================
       PRODUCT CONTENT
       =============================== #}

    <div class="prose max-w-none product-content">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
