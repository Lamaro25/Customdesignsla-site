{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {% if images and images.length %}
      <div class="product-gallery">
        {% for image in images %}
          <img
            src="{{ image }}"
            alt="{{ title }} image {{ loop.index }}"
            loading="lazy"
          >
        {% endfor %}
      </div>
    {% endif %}

    <div class="prose max-w-none product-content">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
