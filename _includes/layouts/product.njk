{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# === PRODUCT IMAGE GALLERY (IMAGES 2â€“4, ABOVE OVERVIEW) === #}
    {% if page.data.images and page.data.images.length > 1 %}
      <div class="product-gallery">
        {% for image in page.data.images | slice(1, 4) %}
          <img
            src="{{ image }}"
            alt="{{ page.data.title }} gallery image {{ loop.index }}"
            loading="lazy"
          >
        {% endfor %}
      </div>
    {% endif %}

    {# === MARKDOWN CONTENT === #}
    <div class="prose max-w-none">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
