{% extends "layouts/base.njk" %}

{% block content %}
<section class="product-page">
  <div class="container">

    {# ðŸ”¹ PRODUCT IMAGE GALLERY (product page only) #}
    {% if images and images.length %}
      <div class="product-gallery">
        {% for image in images %}
          <div class="product-gallery-item">
            <img
              src="{{ image }}"
              alt="{{ title }} image {{ loop.index }}"
              loading="lazy"
            >
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {# ðŸ”¹ PRODUCT TEXT CONTENT (Overview, Breakdown, etc.) #}
    <div class="prose max-w-none product-content">
      {{ content | safe }}
    </div>

  </div>
</section>
{% endblock %}
