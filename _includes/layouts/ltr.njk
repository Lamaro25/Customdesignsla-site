{% extends "base.njk" %}

{% block head %}
  {{ super() }}
  <link rel="stylesheet" href="/static/css/ltr.css">
{% endblock %}

{% block content %}

  <!-- HERO SECTION (Background Image Only) -->
  <div class="ltr-hero">

    <!-- Western Background Image -->
    <img 
      class="ltr-bg" 
      src="/static/img/LTR-Western-Integration/IMG_1047.jpeg" 
      alt="LTR Western Background"
    >

    <h1>{{ title }}</h1>
    <p><em>{{ description }}</em></p>

  </div>

  <!-- COLLECTIONS SECTION BELOW HERO -->
  <section class="ltr-collections">

    <h2>Collections</h2>

    <div class="ltr-buttons">
      {{ content | safe }}
    </div>

  </section>

{% endblock %}
