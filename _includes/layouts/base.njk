<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or "Custom Designs LA" }}</title>

    <!-- ✅ Correct Eleventy output paths -->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/ltr.css">
  </head>

  <body>

    <!-- HEADER -->
    <header class="site-header">

      <!-- BRAND ROW -->
      <div class="container">
        <a href="/" class="flex items-center">
          <span>Custom Designs</span>
          <img src="/assets/uploads/logo.png" alt="LA Logo" />
        </a>
      </div>

      <!-- PREMIUM METAL BUTTON BAR -->
      <div class="top-button-bar">
        <a href="/rings/"><img src="/img/buttons/rings.png" alt="Rings"></a>
        <a href="/charms/"><img src="/img/buttons/charms.png" alt="Charms"></a>
        <a href="/bracelets/"><img src="/img/buttons/bracelets.png" alt="Bracelets"></a>
        <a href="/necklaces/"><img src="/img/buttons/necklaces.png" alt="Necklaces"></a>
        <a href="/bronze/"><img src="/img/buttons/bronze.png" alt="Bronze"></a>
        <a href="/earrings/"><img src="/img/buttons/earrings.png" alt="Earrings"></a>
        <a href="/pendants/"><img src="/img/buttons/pendants.png" alt="Pendants"></a>
        <a href="/shop_all.html"><img src="/img/buttons/shop-all.png" alt="Shop All"></a>
        <a href="/customize.html"><img src="/img/buttons/customize.png" alt="Customize"></a>
        <a href="/cart.html"><img src="/img/buttons/cart.png" alt="Cart"></a>
      </div>

    </header>

    <!-- MAIN CONTENT -->
    <main>
      {{ content | safe }}
    </main>

    <!-- FOOTER -->
    <footer class="site-footer">
      <p>
        © {{ "now" | date: "%Y" }} Custom Designs LA — All Rights Reserved.
      </p>
    </footer>

    <!-- OPTIONAL SCRIPTS -->
    <script src="/js/home-slider.js"></script>

  </body>
</html>
