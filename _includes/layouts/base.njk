<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title | default("Custom Design's LA") }}</title>

  <link rel="stylesheet" href="/static/css/styles.css">
  <link rel="stylesheet" href="/static/css/ltr.css">

    <!-- Collections Toggle Styles + Sticky Header -->
  <style>
    .collections-toggle {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      margin: 0.75rem 1rem;
      padding: 0.45rem 0.9rem;
      font-size: 0.95rem;
      font-weight: 600;
      border-radius: 999px;
      border: 1px solid #ccc;
      background: linear-gradient(to bottom, #f2f2f2, #dcdcdc);
      color: #111;
      cursor: pointer;
      box-shadow: inset 0 1px 0 #fff;
    }

    .collections-toggle:hover {
      background: linear-gradient(to bottom, #ffffff, #e3e3e3);
    }

    .top-button-bar {
      display: none;
    }

    .top-button-bar.is-open {
      display: flex;
    }

    /* === Sticky header for logo + collections bar === */
    .site-header {
      position: sticky;
      top: 0;
      z-index: 1500;
      background: #f8f8f8ee;
      backdrop-filter: blur(4px);
      -webkit-backdrop-filter: blur(4px);
      border-bottom: 1px solid rgba(0,0,0,0.08);
    }

/* Add top padding so content doesn't hide under the sticky header */
main {
  padding-top: 4rem;
}

/* Slightly tighter on mobile */
@media (max-width: 768px) {
  main {
    padding-top: 3.5rem;
  }
}

    }
  </style>

</head>

<body>

<header class="site-header">
  <div class="container header-row">
    <a href="/" class="brand">
      <span class="brand-text">Custom Design’s LA</span>
      <img
        src="/assets/uploads/logo.png"
        alt="Custom Design's LA Logo"
        class="brand-logo"
      />
    </a>
  </div>

  <!-- ✅ COLLECTIONS TOGGLE -->
  <button
    class="collections-toggle"
    type="button"
    aria-expanded="false"
    aria-controls="collections-bar"
  >
    ☰ Collections
  </button>

  <!-- ✅ EXISTING BUTTONS (UNCHANGED) -->
  <div class="top-button-bar" id="collections-bar">
    <a href="/rings/"><img src="/static/img/buttons/rings.png" alt="Rings"></a>
    <a href="/charms/"><img src="/static/img/buttons/charms.png" alt="Charms"></a>
    <a href="/bracelets/"><img src="/static/img/buttons/bracelets.png" alt="Bracelets"></a>
    <a href="/necklaces/"><img src="/static/img/buttons/necklaces.png" alt="Necklaces"></a>
    <a href="/bronze/"><img src="/static/img/buttons/bronze.png" alt="Bronze"></a>
    <a href="/earrings/"><img src="/static/img/buttons/earrings.png" alt="Earrings"></a>
    <a href="/pendants/"><img src="/static/img/buttons/pendants.png" alt="Pendants"></a>
    <a href="/shop_all.html"><img src="/static/img/buttons/shop-all.png" alt="Shop All"></a>
    <a href="/customize.html"><img src="/static/img/buttons/customize.png" alt="Customize"></a>
    <a href="/cart.html"><img src="/static/img/buttons/cart.png" alt="Cart"></a>
  </div>

<main>
  {{ content | safe }}
</main>

<footer class="site-footer">
  <div class="footer-brand">
    <span class="footer-text">Custom Design’s</span>
    <img
      src="/assets/uploads/logo.png"
      alt="Custom Design’s LA Logo"
      class="footer-logo"
    />
  </div>

  <p class="footer-copy">
    © <script>document.write(new Date().getFullYear())</script>
    Custom Design’s LA — All Rights Reserved.
  </p>
</footer>

<!-- ✅ COLLECTIONS TOGGLE SCRIPT (SCOPED) -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector(".collections-toggle");
    const bar = document.querySelector(".top-button-bar");

    if (!toggle || !bar) return;

    toggle.addEventListener("click", () => {
      const isOpen = bar.classList.toggle("is-open");
      toggle.setAttribute("aria-expanded", isOpen);
    });
  });
</script>

<script src="/static/js/home-slider.js" defer></script>

</body>
</html>
