/* ===============================
   Collection Plate Cards
================================ */

.collection-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2.5rem;
  margin: 3rem auto;
  max-width: 1100px;
}

.collection-card {
  position: relative;
  display: block;
  text-decoration: none;
  color: inherit;
  background: #e9e9e9;
  padding: 14px;
  border-radius: 22px;
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.collection-card img {
  width: 100%;
  display: block;
  border-radius: 18px;
  background: #efefef;
  box-shadow:
    inset 0 0 0 1px rgba(0,0,0,0.12),
    0 12px 32px rgba(0,0,0,0.22);
}

.collection-text {
  position: absolute;
  inset: 14px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 2rem;
  pointer-events: none;
}

.collection-text h2 {
  font-size: 1.8rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 0.6rem;
}

.collection-text p {
  font-size: 1rem;
  max-width: 80%;
  color: #2f2f2f;
  line-height: 1.4;
}

.collection-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 18px 40px rgba(0,0,0,0.22);
}

@media (min-width: 768px) {
  .collection-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
